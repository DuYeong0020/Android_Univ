<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Class2App7">
    <Button
        android:id="@+id/btn_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layout Test"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btn_FileCtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="File Ctrl"/>
    <Button
        android:id="@+id/btn_IntentCtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Intent Ctrl"/>

    <EditText
        android:id="@+id/et_Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을  입력해라"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_DrawTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DrawTest"
        android:textSize="24sp" />
</LinearLayout>